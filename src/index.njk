{% extends './_layouts/base.njk' %}

{% block content %}
  {% set items = ['New Game', 'Load Game', 'Options', 'Exit'] %}

  <div>
    {# <img class="fixed w-full h-full left-0 top-0 object-cover" #}
    {# src="/scenery.jpg" #}
    {# alt="" /> #}
    <canvas class="fixed webgl" data-canvas></canvas>
    <h1 class="absolute left-[3vw] lg:left-[5vw] bottom-[60px] uppercase text-[#eee] text-[4.4vw] lg:text-[3.6vw] tracking-[0.07em] font-bold"
      data-title>
      <span class="opacity-0" data-source>Nordic Elysium</span>
      <span class="opacity-0 absolute left-0 whitespace-nowrap"
        data-letters
        aria-hidden="true">

      </span>
    </h1>
    <ul class="absolute right-[5vw] top-1/2 lg:top-[30vh] -translate-y-1/2 lg:translate-y-0 uppercase text-[4vw] lg:text-[2.5vw] text-[#333] font-medium text-right">
      {% for item in items %}
        <li class="mb-[0.4em] opacity-0 invisible" data-list-item>
          <a href="#" class="hover:text-[#ffdca4] active:text-[#eee]">
            {{ item }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endblock %}
